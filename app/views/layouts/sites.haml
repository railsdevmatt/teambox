!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ 'http-equiv' => "content-type", :content => "text/html;charset=utf-8" }
    %link{ :rel => "shortcut icon", :href => "/favicon.ico" }
    %title=h @organization
    = include_stylesheets :application
    = javascript_include_tag 'jquery', 'custom'
    = sprockets_include_tag :public

  %body{ :class => "#{location_name} #{I18n.locale} #{Rails.env}"}
    .shell
      #header
        = link_to image_tag('pos-logo-new.jpg', :alt => 'POS Nation Project Manager', :id => 'logo'), projects_path
      #container.container
        .wrapper
          - show_flash
          .view_sidebar
            = yield :column
    = footer

